---
import { websiteInformation } from "../config";


---

<section id="contact" class="contact-section">
  <div class="container">
    <div class="contact-content">
      <div class="contact-info">
        <h2>How Can We Help?</h2>
        <p>
          Please call to schedule your appointment for service or for a free
          quote. We strive to be in constant communication with our customers
          until the job is done.
        </p>
        <p>
          If you have any questions or special requests, please give us a call.
        </p>

        <div class="business-info">
          <h3>{websiteInformation.name}</h3>
          <p>{websiteInformation.address}</p>

          <div class="contact-details">
            <p>
              <strong>Phone:</strong>
              <a href={websiteInformation.phone}>{websiteInformation.phoneAlt}</a>
            </p>
            <p>
              <strong>Email:</strong>
              <a href=`${websiteInformation.email}`
                >{websiteInformation.emailAlt}</a>
            </p>
          </div>

          <div class="hours">
            <h4>Hours</h4>
            <ul>
              <li><strong>Mon–Fri:</strong> 08:00 a.m. – 05:00 p.m.</li>
              <li><strong>Sat:</strong> 09:00 a.m. – 02:00 p.m.</li>
              <li><strong>Sun:</strong> Closed</li>
            </ul>
          </div>

          <p class="area-note">Sarnia & Surrounding Areas</p>
        </div>
      </div>

      <div id="quote" class="contact-form">
        <h3>Send Us a Message</h3>
        <form name="contact" method="POST" data-netlify="true" class="form">
          <input type="hidden" name="form-name" value="contact" />
          <label>
            Name
            <input type="text" name="name" required />
          </label>
          <label>
            Email
            <input type="email" name="email" required />
          </label>
          <label>
            Message
            <textarea name="message" rows="4" required></textarea>
          </label>
          <button type="submit" class="cta-button">Send Message</button>
        </form>

        <div class="map">
          <iframe
            src="https://www.google.com/maps?q=1184+Michener+Road,+Sarnia,+Ontario+N7S+4B1,+Canada&output=embed"
            width="100%"
            height="250"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: var(--color-bg);
    padding: var(--space-sm) 0;
  }

  .container {
    margin: 0 auto;
    max-width: var(--max-width);
    padding: 0 var(--space-md);
  }

  .contact-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 3rem;
  }

  .contact-info h2 {
    font-family: var(--font-heading);
    color: var(--color-primary);
    font-size: var(--fs-h2);
    margin-bottom: var(--space-sm);
  }

  .contact-info h3 {
    margin-top: var(--space-md);
    color: var(--color-primary-dark);
    font-size: var(--fs-h3);
  }

  .contact-info p {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .contact-details a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .hours ul {
    list-style: none;
    padding: 0;
    margin: 0.5rem 0;
  }

  .hours li {
    margin: 0.3rem 0;
  }

  .area-note {
    font-style: italic;
    margin-top: 1rem;
    color: var(--color-muted);
  }

  /* Contact Form */
  .contact-form h3 {
    margin-bottom: 1rem;
    color: var(--color-accent);
  }

  .form label {
    display: block;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .form input,
  .form textarea {
    width: 100%;
    padding: 0.75rem;
    border-radius: var(--radius-md);
    border: 1px solid #ccc;
    font-size: 1rem;
    margin-top: 0.5rem;
    background: #fff;
  }

  .form input:focus,
  .form textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(0, 128, 0, 0.1);
  }

  .cta-button {
    background: var(--color-primary);
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: background 0.2s ease;
    font-weight: 600;
  }

  .cta-button:hover {
    background: var(--color-primary-light);
  }

  /* Map */
  .map {
    margin-top: 2rem;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }
</style>
