  <div class="nav-container">
    <a href="/" class="logo">
      <img src={logo.src} alt="Lakeside Sprinklers logo" />
    </a>

    <!-- <button class="menu-toggle" id="menu-toggle" aria-label="Toggle navigation">
      <svg
